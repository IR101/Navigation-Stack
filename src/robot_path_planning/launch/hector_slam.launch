 <launch>      

  <!-- 
   <node pkg="tf" type="static_transform_publisher" name="map_to_laser" args="0 0 0 0 0 0 map laser 100" /> -->
 
    <!-- Hector Mapping Node -->
    <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
        <!--<remap from="/map" to="/hector_map"/>-->
        <param name="map_frame" value="map" />
        <param name="odom_frame" value="odom" />
        <param name="base_frame" value="base_link" />
        <param name="laser_frame" value="laser" />
        <param name="scan_topic" value="scan" />
        <param name="use_map_topic" value="true"/> 
        <param name="map_update_interval" value="20.0"/> 
        <param name="map_update_distance_thresh" value="0.1"/> 
        <param name="map_update_angle_thresh" value="0.05"/>   
        <param name="laser_min_dist" value="0.1"/>    
        <param name="laser_max_dist" value="10.0"/>   
        <param name="map_size" value="2048"/>   

        <!-- Disable map saving (we already have a prebuilt map)
        <param name="pub_map_odom_transform" value="true" />
        <param name="pub_odometry" value="true" />
        <param name="pub_map_scanmatch_transform" value="true" />-->
        
        <!-- Enable pose estimation 
        <param name="scan_subscriber_queue_size" value="5"/>
        <param name="use_tf_scan_transformation" value="true"/>
        <param name="use_tf_pose_start_estimate" value="false"/>-->
        
    </node>

   <!--
    <node pkg="robot_path_planning" type="odom_to_base.py" name="odom_to_base" output="screen"/> 
-->
</launch>




