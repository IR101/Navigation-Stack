local_costmap:
    global_frame: map
    robot_base_frame: base_link
    update_frequency: 10.0  # Increased for faster updates
    publish_frequency: 5.0

    static_map: false
    rolling_window: true
    width: 5.0
    height: 5.0
    resolution: 0.1

    plugins:
        - {name: static_layer, type: "costmap_2d::StaticLayer"}
        - {name: obstacle_layer, type: "costmap_2d::ObstacleLayer"}
        - {name: inflation_layer, type: "costmap_2d::InflationLayer"}

    obstacle_layer:
        observation_sources: lidar_sensor
        footprint_clearing_enabled: true
        lidar_sensor: 
            data_type: LaserScan
            sensor_frame: laser
            topic: /scan
            marking: true
            clearing: true

    inflation_layer:
        enabled: true
        cost_scaling_factor: 5.0  
        inflation_radius: 0.2  # Increased for smoother avoidance
